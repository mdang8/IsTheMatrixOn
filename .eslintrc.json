{
  "extends": ["airbnb"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parser": "typescript-eslint-parser",
  "rules": {
    "no-console": "off",
    "comma-dangle": "off",
    "react/jsx-filename-extension": "off",
    "func-names": ["error", "never"],
    "prefer-arrow-callback": ["error", { "allowUnboundThis": true }],
    "no-use-before-define": ["error", { "functions": false }]
  }
}

